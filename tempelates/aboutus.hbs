*{
    margin:0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Be Vietnam Pro", sans-serif;
    scroll-behavior: smooth;
}

:root
{
    --bgOrange: #e84949;
}

#wrapper
{
    height: 100vh; /*100view port (full page)*/
    overflow-y: auto;  /*to scroll in y direction*/
    overflow-x: hidden; /*to not scroll in x direction*/
}

.container
{
    margin: 0 auto; /*keep in center*/
    height: 500px;
    background-image: url(images/aboutus-main.jpeg);
    background-size: cover;
}

.navbar
{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 1rem;
}


.logo-container
{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 1rem;

}
.logo-text a
{
    color: white;
    text-align: center;
    font-size: 25px;
    font-weight: 800;
    padding-left: 2em;
    text-decoration: none;
}

.search-bar
{
    padding-left: 18rem;
    color: white;
}

.search-bar-form
{
    width: 100%;
    max-width: 700px;
    background: rgb(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    border-radius: 60px;
    padding: 5px 10px;
    backdrop-filter: blur(4px) saturate(180%);
}

.search-bar-form input
{
    background: transparent;
    flex: 1;
    border: 0;
    outline: none;
    padding: 12px 10px;
    font-size: 12px;
    color: #ffffff;
}

::placeholder
{
    color: #ffffff;
}

.search-bar-form button img
{
    width: 18px;
}

.search-bar-form button
{
    border: 0;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    background: #ac0303;
    cursor: pointer;
}

.nav-items
{
    display: flex;
    gap: 2rem;
    padding: 0 4em;
}

.nav-items div
{
    text-align: center;
    font-size: 20px;
    font-weight: 1200;
    cursor: pointer;
}

.nav-items div a
{
    color: rgb(255, 255, 255);
    text-decoration: none;
}

#nav-items-tag
{
    padding-top: 0.65rem;
}

.nav-items div :hover
{
    transition: 0.5s;
    color: rgb(144, 144, 144); 
    
}

.btn-white {
    background-color: rgb(255, 255, 255);
    border: none;
    color: rgb(0, 0, 0);
    padding: 8px 16px;
    font-size: 18px;
    font-weight: 1200;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    border-radius: 20px;
    z-index: 1;
  }

  .btn-white:hover {
    background-color: #ac0303;
    color: white;
  }

  .main-body
  {
    padding-top: 50px;
    padding-bottom: 50px;
    display: flex;
    flex-direction: column;
    max-width: 50%;
    margin-left: 50vh;
  }

  .main-body h1
  {
     font-family: "Fjalla One", sans-serif;
    font-weight: 10000;
    font-size: 60px;
    padding-bottom: 35px;
  }

  .main-body-cover
  {
    background-color: rgb(245, 245, 245);
  }

  .title
  {
    font-size: 45px;
    padding-bottom: 20px;
  }

  .aboutusdet p h3 h2
  {
    font-family: "DM Serif Text", serif;
    font-size: 16px;
    font-weight: 500;
    
  }

  /* Footer of the website */

  footer
  {
    background-color: #111;
  }

  .footer-container
  {
    width: 100%;
    padding: 70px 30px 20px;
  }

  .social-icons
  {
    display: flex;
    justify-content: center;
     
  }

  .social-icons a
  {
    text-decoration: none;
    padding: 10px;
    background-color: white;
    margin: 10px;
    border-radius: 50%;
  }

  .social-icons a i{
    font-size: 2em;
    color: black;
    opacity: 0.9;
  }

  .social-icons a:hover{
   background-color: #111;
   transition: 0.8s;
 }

 .social-icons a:hover i{
   color: white;
   transition: 0.8s;
 }

  .footer-nav{
    margin: 30px 0;
  }

  .footer-nav ul{
    display: flex;
    justify-content: center;
    list-style-type: none;
  }

  .footer-nav ul li a{
    color: white;
    margin: 20px;
    text-decoration: none;
    font-size: 1.3em;
    opacity: 0.7;
    transition: 0.5s;
  }

  .footer-nav ul li a:hover
  {
    opacity: 1;
  }

  .footer-bottom
  {
    background-color: #000;
    padding: 20px;
    text-align: center;
  }

  .footer-bottom p
  {
    color: white;
  }

  .designer
  {
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 400;
    margin: 0px 5px;
  }

  
  /* Media queries */

  @media(max-width: 700px) {
    .footer-nav ul{
      flex-direction: column;
    }

    .footer-nav ul li{
      width: 100%;
      text-align: center;
      margin: 10px;
    }
  }

    </style>
</head>
