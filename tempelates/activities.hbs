*{
    margin:0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Be Vietnam Pro", sans-serif;
    scroll-behavior: smooth;
}

:root
{
    --bgOrange: #e84949;
}

#wrapper
{
    height: 100vh; /*100view port (full page)*/
    overflow-y: auto;  /*to scroll in y direction*/
    overflow-x: hidden; /*to not scroll in x direction*/
}

/* Hero Section Starts from here */

.container
{
    margin: 0 auto; /*keep in center*/
    height: 500px;
    background-image: url(images/activities-main.jpeg);
    background-size: cover;
}

.navbar
{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 1rem;
}


.logo-container
{
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 2rem;
    padding-bottom: 1rem;

}
.logo-text a
{
    color: white;
    text-align: center;
    font-size: 25px;
    font-weight: 800;
    padding-left: 2em;
    text-decoration: none;
}

.search-bar
{
    padding-left: 18rem;
    color: white;
}

.search-bar-form
{
    width: 100%;
    max-width: 700px;
    background: rgb(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    border-radius: 60px;
    padding: 5px 10px;
    backdrop-filter: blur(4px) saturate(180%);
}

.search-bar-form input
{
    background: transparent;
    flex: 1;
    border: 0;
    outline: none;
    padding: 12px 10px;
    font-size: 12px;
    color: #ffffff;
}

::placeholder
{
    color: #ffffff;
}

.search-bar-form button img
{
    width: 18px;
}

.search-bar-form button
{
    border: 0;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    background: #133031;
    cursor: pointer;
}

.nav-items
{
    display: flex;
    gap: 2rem;
    padding: 0 4em;
}

.nav-items div
{
    text-align: center;
    font-size: 20px;
    font-weight: 1200;
    cursor: pointer;
}

.nav-items div a
{
    color: rgb(255, 255, 255);
    text-decoration: none;
}

#nav-items-tag
{
    padding-top: 0.65rem;
}

.nav-items div :hover
{
    transition: 0.5s;
    color: rgb(144, 144, 144); 
    
}

.btn-white {
    background-color: rgb(255, 255, 255);
    border: none;
    color: rgb(0, 0, 0);
    padding: 8px 16px;
    font-size: 18px;
    font-weight: 1200;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    border-radius: 20px;
    z-index: 1;
  }

  .btn-white:hover {
    background-color: #133031;
    color: white;
  }

  /* Main Section of The Website */

  .container-title{
    background-color: rgb(231, 231, 231);
    display: flex;
    justify-content: left;
    text-align: center;
    padding-top: 2rem;
    padding-left: 8rem;
  }

  .container-title h2{
    font-size: 40px;
    font-weight: 800;
    font-family: "Prata", serif;
  }

  .main-container{
    background-color: rgb(231, 231, 231);
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 5em;
    padding-top: 50px;
    padding-bottom: 50px;
    perspective: 800px;
  }

  .card{
    width: 350px;
    height: 500px;
    position: relative;
    transition: transform 1500ms;
    transform-style: preserve-3d;
  }

  .card-container:hover > .card{
    cursor: pointer;
    transform: rotateY(180deg);
  }

  .front, .back {
    height: 100%;
    width: 100%;
    border-radius: 2rem;
    box-shadow: 0 0 5px 2px rgba(50, 50, 50, 0.25);
    position: absolute;
    backface-visibility: hidden;
  }

  .front img
  {
    height: 100%;
    width: 100%;
    position: absolute;
    border-radius: 2rem;
  }

  .back
  {
    background: linear-gradient(90deg, rgba(238,174,202,1) 0%, rgba(161,164,213,1) 33%, rgba(164,138,190,1) 48%, rgba(154,167,216,1) 79%, rgba(148,187,233,1) 100%);
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    gap: 5rem;
    color: #2b1665;
  }

  .back h1
  {
    text-align: center;
    padding: 5px;
    font-weight: 3000;
    font-size: 40px;
    font-family: "Prata", serif;
  }

  .back p
  {
    padding-left: 1rem;
    padding-right: 1rem;
    font-family: "DM Serif Text", serif;
    font-size: 16px;
  }

   /* Footer of the website */

   footer
   {
     background-color: #111;
   }
 
   .footer-container
